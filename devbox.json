{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.7/.schema/devbox.schema.json",
  "packages": [
    "python3@3.11.9",
    "poetry@1.8.3",
    "pre-commit@latest"
  ],
  "shell": {
    "init_hook": [
	    "if [ $SHELL == '/bin/zsh' ]; then source .venv/bin/activate; fi",
      "if [ $SHELL != '/bin/zsh' ]; then . .venv/bin/activate; fi",
      "poetry install"
    ],
    "scripts": {
      "test": [
        "task test"
      ],
      "check": [
        "task check"
      ]
    }
  }
}
